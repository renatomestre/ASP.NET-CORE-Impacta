@{
    ViewData["Title"] = "Livros";
}

<div>
    <h4>Cadastro de Livro</h4>
</div>

<div>
    <form>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="titulo" placeholder="Título completo">
            <label for="titulo">Título</label>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="autor" placeholder="Nome completo">
            <label for="autor">Autor</label>
        </div>

        <div class="form-floating mb-3 col-4">
            <input type="number" class="form-control" id="anoLancamento" placeholder="Ano" min="1">
            <label for="anoLancamento">Ano de lançamento</label>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="editora" placeholder="Editora">
            <label for="editora">Editora</label>
        </div>

        <div class="form-floating mb-3 col-6">
            <select class="form-select" aria-label="Gênero literário" id="genero">
                <option selected>-- Selecione uma opção --</option>
                <option value="3">Acadêmico</option>
                <option value="2">Policial</option>
                <option value="1">Romance</option>
            </select>
            <label for="genero">Gênero</label>
        </div>

        <button type="submit" class="btn btn-dark btn-lg">Gravar</button>
    </form>
</div>