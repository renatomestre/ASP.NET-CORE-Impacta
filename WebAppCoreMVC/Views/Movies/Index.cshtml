@model IEnumerable<WebAppCoreMVC.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-outline-primary" asp-action="Create">+ Add new</a>
</p>

<div class="row">
    @foreach (Movie? item in Model.OrderBy(m => m.ReleaseDate))
    {
        <div class="col-md-3">
            <img src="@Html.DisplayFor(modelItem => item.Cover)" height="300" />
            <br>
            @Html.DisplayFor(modelItem => item.Title)
            <br>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
            <br>
            @Html.DisplayFor(modelItem => item.Genre)
            <br>
            R$ @Html.DisplayFor(modelItem => item.Price)
            <div>
                <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>